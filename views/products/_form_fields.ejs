<!-- views/products/_form_fields.ejs -->

<label for="name">Product Name</label>
<input type="text" id="name" name="name" placeholder="Product name" value="<%= product.name %>">

<label for="photos">Photos</label>
<div class="mb-2">
  <label class="w-24 h-24 cursor-pointer text-center flex items-center justify-center text-sm gap-1 text-gray-500 rounded-lg bg-gray-200">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5" />
    </svg>    
    <div>
      Upload
    </div>
    <input type="file" name="photos" id="photos" class="hidden" multiple>
  </label>
  <% if (product.images.length === 0) { %>
    <div>
      No photos in this product.
    </div>
    <div class="mt-2" id="imageContainer"></div>
  <% } else { %>
    <div class="mt-2" id="imageContainer">
      <% product.images.forEach(image => { %>
        <div class="flex" id="imageDiv">
          <img src="<%= image.url %>" alt="Product Image" class="w-24 h-24 mr-2">
          <button class="delete-image-btn flex gap-1 bg-red-600 text-white px-2 py-1 h-6 justify-center items-center rounded-md" data-filename="<%= image.filename %>">
            <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
            Delete
          </button>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<label for="description">Description</label>
<textarea id="description" name="description" placeholder="Description" value="<%= product.description %>"><%= product.description %></textarea>
    
<label for="price">Price (in USD)</label>
<input type="number" id="price" name="price" placeholder="Price" value="<%= product.price %>">

<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOMContentLoaded event triggered.');
    const fileInput = document.getElementById('photos');
    const imagePaths = [];

    fileInput.addEventListener('change', function(event) {
      const files = event.target.files;
      const imageContainer = document.getElementById('imageContainer'); 
      console.log('Files selected:', files);

      for (let i = 0; i < files.length; i++) {
        const file = files[i];
        const imageDiv = document.createElement('div');
        const image = document.createElement('img');
        image.src = URL.createObjectURL(file);
        image.alt = 'Product Image';
        image.classList.add('w-24', 'h-24', 'mr-2');

        const deleteButton = document.createElement('button');
        deleteButton.classList.add('delete-image-btn', 'flex', 'gap-1', 'bg-red-600', 'text-white', 'px-2', 'py-1', 'h-6', 'justify-center', 'items-center', 'rounded-md');
        deleteButton.dataset.filename = file.name;
        deleteButton.innerHTML = `
          <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
          Delete
        `;
        deleteButton.addEventListener('click', function() {
          const filename = this.getAttribute('data-filename');
          deleteImage(filename);
        });

        imageDiv.appendChild(image);
        imageDiv.appendChild(deleteButton);
        imageContainer.appendChild(imageDiv);
      }
    });

    // Function to send delete request to delete an image
    const deleteImage = (filename) => {
      // Implementation to delete image from server
      // For example, send a request to your backend to delete the image
      // Send a DELETE request to your server endpoint to delete the image
      fetch(`/delete-image/${filename}`, {
        method: 'DELETE'
      })
      .then(response => {
        if (!response.ok) {
          throw new Error('Failed to delete image');
        }
        console.log('Image deleted successfully');
        // Optionally, remove the deleted image from the UI
        removeImageFromUI(filename);
      })
      .catch(error => {
        console.error('Error deleting image:', error);
        // Handle error
      });
    };

    // Function to remove deleted image from UI
    const removeImageFromUI = (filename) => {
      const imageDiv = document.querySelector(`[data-filename="${filename}"]`).parentNode;
      imageDiv.parentNode.removeChild(imageDiv);
    };
  });
</script>
