<!-- views/products/index.ejs -->
<div class=" text-blue-900 mb-1">
  <h1 class="font-bold">Products</h1>
</div>
<div class="mb-2">
  <a href="/products/new" class="btn-primary">Add new product</a>
</div>
<!-- Display all products -->
<table class="basic mt-2">
  <thead>
    <tr>
      <td>Product Name</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.name %></td>
        <td class="flex gap-1">
          <a href="/products/edit/<%= product.id %>">
            <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
            Edit
          </a>
          <%- include('../partials/_deleteForm', { url: `/products/delete/${product.id}` }) %>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>


